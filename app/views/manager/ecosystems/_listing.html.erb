<table class="table table-striped">
  <thead>
    <tr>
      <th>Book Title</th>
      <th>Book Version</th>
      <th>Import Date</th>
      <th>Link to Archive</th>
      <th>Book UUID</th>
    </tr>
  </thead>
  <tbody>
  <% ecosystems.each do |ecosystem| %>
    <% book = ecosystem.books.first %>

    <tr>
      <td><%= book.title %></td>
      <td><%= book.version %></td>
      <td><%= ecosystem.imported_at %></td>
      <td><%= link_to 'Archive', book.url, target: '_blank',
                                           class: 'btn btn-xs btn-primary' %></td>
      <td><%= link_to 'Show UUID', '#', role: 'button',
                                        tabindex: 0,
                                        data: { toggle: 'popover',
                                                trigger: 'focus',
                                                placement: 'top',
                                                content: book.uuid,
                                                container: 'body' },
                                        class: 'btn btn-xs btn-secondary' %></td>
    </tr>
  <% end %>
  </tbody>
</table>
