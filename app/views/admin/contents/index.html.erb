<% @page_header = 'Content' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>UUID</th>
      <th>Version</th>
      <th>Link to Archive</th>
      <th>Import Date</th>
    </tr>
  </thead>
  <tbody>
  <% @ecosystems.each do |ecosystem| %>
    <tr>
      <td><%= ecosystem.books.first.title %></td>
      <td><%= ecosystem.books.first.uuid %></td>
      <td><%= ecosystem.books.first.version %></td>
      <td><%= link_to 'Archive', ecosystem.books.first.url, target: '_blank',
                                                            class: 'btn btn-xs btn-primary' %></td>
      <td><%= ecosystem.imported_at %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Import a Book into a new Ecosystem', import_admin_contents_path,
                                                  class: 'btn btn-primary' %>
