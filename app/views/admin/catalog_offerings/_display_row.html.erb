<div class='offering-row'>
  <b>ID:</b> <%= offering.identifier %>
  <span style='float: right'>
    <%= link_to 'Edit', edit_admin_catalog_offering_url(offering.id) %>
  </span>
  <div style='clear:both'>
    <b>Ecosystem:</b> <%= offering.ecosystem ? offering.ecosystem.title : 'not set' %>
  </div>
  <div>
    <b>Description:</b> <%= offering.description %>
  </div>
  <div>
    <b>PDF URL:</b> <%= link_to offering.pdf_url, offering.pdf_url %>
  </div>
  <div>
    <b>Webview:</b> <%= link_to offering.webview_url, offering.webview_url %>
  </div>
  <div>
    <b>Default Course Name:</b> <%= offering.default_course_name || '[not set]' %>
    <span style="float: right">
      <b>Full Tutor?</b>&nbsp;&nbsp; <%= tf_to_yn(offering.is_tutor) %>&nbsp;&nbsp;&nbsp;&nbsp;
      <b>CC?</b>&nbsp;&nbsp; <%= tf_to_yn(offering.is_concept_coach) %>
    </span>
  </div>
</div>
