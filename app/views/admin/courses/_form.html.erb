<% method ||= :post %>

<%= lev_form_for :course, url: url, method: method do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <% unless @course.nil? %>
    <%= f.label :teacher, 'Assign teachers' %>
    <%= f.text_field :teacher %>
    <ul id="assigned-teachers"></ul>
  <% end %>

  <%= f.submit 'Save', class: 'btn btn-primary' %>
<% end %>
