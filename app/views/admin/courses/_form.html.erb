<% method ||= :post %>

<%= lev_form_for :course, url: url, method: method do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :teacher_ids, 'Assign teachers' %>
  <%= f.collection_select :teacher_ids, @users, :entity_user_id, :full_name, {},
                          { multiple: true } %>

  <%= f.submit 'Save', class: 'btn btn-primary' %>
<% end %>
